<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repo_desc"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            tools:srcCompat="@tools:sample/avatars[0]" />


        <TextView
            android:id="@+id/demoname"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="43dp"
            android:layout_marginBottom="30dp"
            android:background="#aacaff"
            android:text="Owner Name:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/demoFollowering"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="30dp"
            android:background="#e3e2ad"
            android:text="Following:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/demoFollowers"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="30dp"
            android:background="#aacaff"
            android:text="Follower:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/DemoPublicrepo"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="30dp"
            android:background="#e3e2ad"
            android:text="Public Repo:"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oname"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="30dp"
            android:background="#aacaff"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fol"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:background="#e3e2ad"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignEnd="@+id/desc_pname"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="30dp"
            android:background="#aacaff"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/publicrepo"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_alignEnd="@+id/desc_pname"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:background="#e3e2ad"
            android:clickable="true"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>